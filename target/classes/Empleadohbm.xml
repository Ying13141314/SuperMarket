<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="Modelos.Empleado" table="empleado" schema="supermarkt">
        <id name="idEmpleado">
            <column name="idEmpleado" sql-type="int(11)"/>
        </id>
        <property name="ultimaSesion">
            <column name="ultimaSesion" sql-type="datetime" not-null="true"/>
        </property>
        <property name="fechaContratacion">
            <column name="fechaContratacion" sql-type="date" not-null="true"/>
        </property>
        <property name="login">
            <column name="login" sql-type="varchar(50)" length="50" not-null="true"/>
        </property>
        <set name="comprasByIdEmpleado" inverse="true">
            <key>
                <column name="idEmpleado" not-null="true"/>
            </key>
            <one-to-many not-found="ignore" class="Modelos.Compra"/>
        </set>
    </class>
</hibernate-mapping>